@page "/raids"

@using Iwentys.Sdk
@inherits Iwentys.Endpoints.WebClient.Shared.DependencyInjectionPage

<div class="d-flex flex-row align-self-center align-baseline">
    <h3>RaidJournalPage</h3>
    <MudButton Link="/raids/create">
        <span class="oi oi-plus" title="add" aria-hidden="true"></span>
    </MudButton>
</div>

<div class="container-fluid d-flex">
    <div class="d-flex flex-column">
        @if (_raids is not null)
        {
            <div class="container-fluid d-flex flex-column">
                @foreach (RaidProfileDto raid in _raids)
                {
                    <div class="card-list-element">
                        <MatCard Class="dark-elevation-02">
                            <MatCardContent>
                                <div class="card-list-element-content">
                                    <MatHeadline6>
                                        @raid.Title
                                    </MatHeadline6>
                                    <MatBody2>
                                        @raid.Description
                                    </MatBody2>
                                </div>
                            </MatCardContent>
                            <MatCardActions>
                                <MudButton Link=@LinkToRaidProfile(raid)>Open</MudButton>
                            </MatCardActions>
                        </MatCard>
                    </div>
                }
            </div>
        }
    </div>
</div>