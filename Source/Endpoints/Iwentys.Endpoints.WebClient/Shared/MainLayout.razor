@inherits LayoutComponentBase

<MatThemeProvider Theme=@globalTheme>
    <div class="page main-background">
        <div class="sidebar sidebar-surface dark-elevation-04">
            <NavMenu />
        </div>

        <div class="main main-background">
            <div class="content px-4 main-background">
                @Body
            </div>
        </div>
    </div>
</MatThemeProvider>

@code
{
    //FYI: this colors must be synced with global css
    MatTheme globalTheme = new MatTheme()
    {
        Primary = "#80D8FE",
        Secondary = "#00FFAA",
        Background = "#202036",
        Surface = "#27273E",
        OnPrimary = "#E0E0FF",
        OnSecondary = "#E0E0FF",
        OnSurface = "#E0E0FF"
    };
}
